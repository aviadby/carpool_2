<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All spots
    </h1>

    <a href="/spots/new" class="btn btn-block btn-outline-secondary">
      Add a new spot
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "spot_templates/spots_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Ride
        </th>

        <th>
          Joiner
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @spots.each do |spot| %>
      <tr>
        <!-- Display spot.id start -->
        <td>
          <%= spot.id %>
        </td>
        <!-- Display spot.id end -->

        <!-- Display spot.ride_id start -->
        <td>
          <% if spot.ride.present? %>
            <a href="/rides/<%= spot.ride.id %>">
              <%= spot.ride.created_at %>
            </a>
          <% end %>
        </td>
        <!-- Display spot.ride_id end -->

        <!-- Display spot.joiner_id start -->
        <td>
          <% if spot.joiner.present? %>
            <a href="/users/<%= spot.joiner.id %>">
              <%= spot.joiner.email %>
            </a>
          <% end %>
        </td>
        <!-- Display spot.joiner_id end -->

        <!-- Display spot.created_at start -->
        <td>
          <%= time_ago_in_words(spot.created_at) %> ago
        </td>
        <!-- Display spot.created_at end -->

        <!-- Display spot.updated_at start -->
        <td>
          <%= time_ago_in_words(spot.updated_at) %> ago
        </td>
        <!-- Display spot.updated_at end -->

        <td>
          <a href="/spots/<%= spot.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @spots, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
