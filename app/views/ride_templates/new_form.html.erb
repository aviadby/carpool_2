<h1>
  Add a new ride
</h1>


<hr>

<form action="/create_ride" method="post">

  <div class="form-group">
    <label for="origin">
      Origin
    </label>

    <input type="text" id="origin" name="origin" class="form-control">
  </div>

  <div class="form-group">
    <label for="destination">
      Destination
    </label>

    <input type="text" id="destination" name="destination" class="form-control">
  </div>

  <div class="form-group">
    <label for="departs">
      Departs
    </label>

    <input type="text" id="departs" name="departs" class="form-control">
  </div>

  <input type="hidden" name="ride_leader" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create ride
  </button>
</form>

<hr>

<a href="/rides">
  Go back
</a>
