<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All rides
    </h1>

    <a href="/rides/new" class="btn btn-block btn-outline-secondary">
      Add a new ride
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "ride_templates/rides_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "ride_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Origin
        </th>

        <th>
          Destination
        </th>

        <th>
          Departs
        </th>

        <th>
          Ride leader
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @rides.each do |ride| %>
      <tr>
        <td>
          <%= ride.id %>
        </td>

        <td>
          <%= ride.origin %>
        </td>

        <td>
          <%= ride.destination %>
        </td>

        <td>
          <%= ride.departs %>
        </td>

        <td>
          <% if ride.leader.present? %>
            <a href="/users/<%= ride.leader.id %>">
              <%= ride.leader.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(ride.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(ride.updated_at) %> ago
        </td>

        <td>
          <a href="/rides/<%= ride.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @rides, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
