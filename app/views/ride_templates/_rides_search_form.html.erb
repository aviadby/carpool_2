            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#spotsgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#spotslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#spotsgteqcreated_atPicker').on("dp.change", function (e) {
              $('#spotslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#spotslteqcreated_atPicker').on("dp.change", function (e) {
              $('#spotsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/rides" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

